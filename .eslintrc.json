{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-typescript",
        "prettier",
        "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaFeatures": {
            "tsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": [
        "react",
        "@typescript-eslint"
    ],
    "rules": {
        "react/react-in-jsx-scope": "off",
        "semi": 0,
        "react/jsx-filename-extension": [
          1,
          {
            "extensions": [".ts", ".tsx"]
          }
        ],
        "import/imports-first": ["error", "absolute-first"],
        "import/newline-after-import": "error",
        "prettier/prettier": [
          "error",
          {
            "semi": false
          }
        ]
    }
}
